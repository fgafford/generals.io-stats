{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es5",
    "sourceMap": true,
    "sourceRoot": "./src/ts",
    "preserveConstEnums": true,
    "removeComments": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
